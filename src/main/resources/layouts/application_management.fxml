<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<VBox xmlns="http://javafx.com/javafx/25" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.jobsphere.controllers.ApplicationManagementController"
      spacing="10" padding="10">

    <Label text="Applications for Your Jobs" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    
    <TableView fx:id="applicationsTable">
        <columns>
            <TableColumn fx:id="nameCol" text="Applicant Name" prefWidth="150"/>
            <TableColumn fx:id="skillsCol" text="Skills" prefWidth="200"/>
            <TableColumn fx:id="resumeCol" text="Resume" prefWidth="150"/>
            <TableColumn fx:id="experienceCol" text="Experience" prefWidth="100"/>
            <TableColumn fx:id="statusCol" text="Status" prefWidth="100"/>
        </columns>
    </TableView>
</VBox>
