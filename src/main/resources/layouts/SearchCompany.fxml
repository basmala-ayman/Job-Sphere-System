<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.jobsphere.controller.SearchCompanyController"
      alignment="CENTER"
      stylesheets="@../Styles/searchStyles.css"
      styleClass="root"
      spacing="20">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <BorderPane>
        <left>
            <Button fx:id="backBtn" text="â† Back" onAction="#handleBack" styleClass="back-btn"/>
        </left>
        <right>
            <Region prefWidth="50" />
        </right>
    </BorderPane>

    <VBox styleClass="card" VBox.vgrow="ALWAYS" spacing="20">

        <Label text="Advanced Candidate Search" styleClass="header-label"/>

        <HBox spacing="15" alignment="BOTTOM_LEFT">
            <VBox spacing="5">
                <Label text="Job Title:" styleClass="sub-label"/>
                <ComboBox fx:id="jobComboBox" promptText="Select Job" prefWidth="180"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Skill:" styleClass="sub-label"/>
                <ComboBox fx:id="skillComboBox" promptText="Select Skill" prefWidth="180"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Experience:" styleClass="sub-label"/>
                <ComboBox fx:id="expComboBox" promptText="Years" prefWidth="120"/>
            </VBox>

            <Region HBox.hgrow="ALWAYS" />

            <Button text="Filter Results" onAction="#handleSearch" styleClass="primary-btn"/>
        </HBox>

        <TableView fx:id="resultsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colName" text="Name" prefWidth="150"/>
                <TableColumn fx:id="colJob" text="Job Title" prefWidth="150"/>
                <TableColumn fx:id="colSkills" text="Skills" prefWidth="180"/>
                <TableColumn fx:id="colExp" text="Exp" prefWidth="60"/>
                <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                <TableColumn fx:id="colResume" text="Resume" prefWidth="120"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

    </VBox>
</VBox>