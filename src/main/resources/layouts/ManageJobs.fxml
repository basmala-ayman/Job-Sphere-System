<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.jobsphere.controller.ManageJobController">

    <!-- MAIN TABLE -->
    <center>
        <VBox spacing="10" style="-fx-padding: 10px;">

            <TableView fx:id="jobTable" prefHeight="400">
                <columns>

                    <TableColumn fx:id="colTitle" text="Title" prefWidth="200"/>
                    <TableColumn fx:id="colCity" text="City" prefWidth="150"/>
                    <TableColumn fx:id="colType" text="Job Type" prefWidth="120"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>

                </columns>
            </TableView>

            <!-- ACTION BUTTONS -->
            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="editButton" text="Edit Selected Job" onAction="#onEditJob" prefWidth="150"/>
                <Button fx:id="pauseButton" text="Pause / Activate" onAction="#onPauseJob" prefWidth="150"/>
                <Button fx:id="deleteButton" text="Delete Job"  onAction="#onDeleteJob" prefWidth="150" style="-fx-background-color: #d9534f; -fx-text-fill: white;"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>
