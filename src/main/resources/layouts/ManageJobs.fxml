<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.jobsphere.controller.ManageJobController"
      spacing="15" padding="20">

    <Label text="Manage Jobs" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <!-- List of Jobs -->
    <ListView fx:id="jobListView" prefHeight="200"/>

    <!-- Action Buttons -->
    <HBox spacing="10">
        <Button text="Edit" fx:id="editButton" onAction="#onEdit"/>
        <Button text="Remove" fx:id="removeButton" onAction="#onRemove"/>
        <Button text="Pause" fx:id="pauseButton" onAction="#onPause"/>
    </HBox>

</VBox>
