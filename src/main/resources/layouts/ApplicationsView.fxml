<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.jobsphere.controller.ApplicationController"
            stylesheets="@../Styles/applicationsView.css"
            prefWidth="800.0" prefHeight="850.0"
            styleClass="root">

    <center>
        <VBox spacing="20" styleClass="main-container">

            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>
            <BorderPane>
                <left>
                    <Button fx:id="backBtn" text="â† Back" onAction="#handleBack" styleClass="back-btn"/>
                </left>
                <right>
                    <Region prefWidth="80"/>
                </right>
            </BorderPane>

            <Label text="Manage Company Applications" styleClass="header-label" style="-fx-font-size: 24;"/>

            <TableView fx:id="applicationsTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="userNameColumn" text="Name" prefWidth="150"/>
                    <TableColumn fx:id="emailColumn" text="Email" prefWidth="180"/>
                    <TableColumn fx:id="jobTitleColumn" text="Job Title" prefWidth="150"/>
                    <TableColumn fx:id="skillsColumn" text="Skills" prefWidth="200"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="140"/>
                    <TableColumn fx:id="saveColumn" text="Action" prefWidth="100"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

</BorderPane>
